<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="5dp" android:top="0dp">
                <shape>
                    <corners android:radius="50dp" />
                    <gradient android:centerColor="#a8fd67" android:centerX="70%" android:endColor="#83f94d" android:startColor="#79f959" android:type="linear" />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="2dp" android:right="10dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />
                    <gradient android:angle="90" android:centerColor="#a8fd67" android:centerX="60%" android:endColor="#83f94d" android:startColor="#7cf95a" android:type="linear" />
                    <size android:width="28dp" android:height="2dp" />
                    <stroke android:width="0.5dp" android:color="#7cf95a" />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="2dp" android:right="10dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />

                    <gradient android:angle="90" android:centerColor="#7cf95a" android:centerX="50%" android:endColor="#83f94d" android:startColor="@android:color/transparent" android:type="linear" />

                    <size android:width="28dp" android:height="2dp" />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="2dp" android:right="10dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />

                    <gradient android:angle="360" android:centerColor="#abfa65" android:centerX="5%" android:endColor="#83f94d" android:gradientRadius="360" android:startColor="#7cf95a" android:type="sweep" />

                    <size android:width="28dp" android:height="2dp" />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="2dp" android:right="10dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />

                    <gradient android:angle="360" android:centerColor="#abfa65" android:centerX="95%" android:endColor="#7df94c" android:gradientRadius="360" android:startColor="#7cf95a" android:type="sweep" />

                    <size android:width="28dp" android:height="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>