<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:right="5dp"
        android:top="0dp">
        <shape>
            <corners android:radius="50dp" />
            <gradient
                android:centerColor="@color/colorPrimaryLight"
                android:centerX="70%"
                android:endColor="@color/colorPrimaryLight"
                android:startColor="@color/colorPrimaryLight"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="2dp"
        android:right="10dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:angle="90"
                android:centerColor="@color/colorPrimaryLight"
                android:centerX="60%"
                android:endColor="@color/colorPrimaryLight"
                android:startColor="@color/colorPrimaryLight"
                android:type="linear" />
            <size
                android:height="2dp"
                android:width="28dp" />
            <stroke
                android:color="@color/colorPrimaryLight"
                android:width="0.5dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="2dp"
        android:right="10dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />

            <gradient
                android:angle="90"
                android:centerColor="@color/colorPrimaryLight"
                android:centerX="50%"
                android:endColor="@color/colorPrimaryLight"
                android:startColor="@android:color/transparent"
                android:type="linear" />

            <size
                android:height="2dp"
                android:width="28dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="2dp"
        android:right="10dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />

            <gradient
                android:angle="360"
                android:centerColor="@color/colorPrimaryLight"
                android:centerX="5%"
                android:endColor="@color/colorPrimaryLight"
                android:gradientRadius="360"
                android:startColor="@color/colorPrimaryLight"
                android:type="sweep" />

            <size
                android:height="2dp"
                android:width="28dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="2dp"
        android:right="10dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />

            <gradient
                android:angle="360"
                android:centerColor="@color/colorPrimaryLight"
                android:centerX="95%"
                android:endColor="@color/colorPrimaryLight"
                android:gradientRadius="360"
                android:startColor="@color/colorPrimaryLight"
                android:type="sweep" />

            <size
                android:height="2dp"
                android:width="28dp" />
        </shape>
    </item>
</layer-list>