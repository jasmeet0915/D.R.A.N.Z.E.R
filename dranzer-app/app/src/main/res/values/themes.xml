<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dranzer" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Dranzer.Toolbar">
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>


    <style name="Theme.Dranzer.Text">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/gotham</item>
    </style>

    <style name="Theme.Dranzer.Text.H5">
        <item name="android:textSize">24sp</item>
    </style>
</resources>